[Unit]
Description=cronosd
ConditionPathExists=/usr/local/bin/cronosd
After=network.target

[Service]
Type=simple
User={{ ansible_env.USER }}
WorkingDirectory=/usr/local/bin
ExecStart=/usr/local/bin/cronosd start --home {{ ansible_env.HOME }}/.cronos
Restart=on-failure
RestartSec=10
LimitNOFILE=50000

[Install]
WantedBy=multi-user.target
